{
  "name": "form-app",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:api": "npm run dev -w apps/api",
    "dev:web": "npm run dev -w apps/web",
    "dev": "concurrently -n api,web -c blue,green \"npm run dev:api\" \"npm run dev:web\"",
    "build:web": "npm run build -w apps/web",
    "preview:web": "npm run preview -w apps/web",
    "smoke:api": "node apps/api/scripts/smoke.mjs",
    "lint": "echo \"lint not configured\"",
    "format": "echo \"format not configured\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "vite": "^7.3.0",
    "wrangler": "^4.54.0"
  }
}
